<mvc:View
    xmlns:cssgrid="sap.ui.layout.cssgrid" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic" 
    xmlns:cards="sap.f.cards" 
    xmlns:dm="wmppec.control"
    xmlns:grid="sap.ui.layout.cssgrid" 
    xmlns:f="sap.f"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="wmppec.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
>
    <Shell id="shell">
        <App id="app">
            <pages>
          <Page xmlns="sap.m" id="pageId"
        floatingFooter="true" class="myTextSize" busy="{viewModel>/busy/global}">
        <customHeader>
           <Bar>
           <contentLeft>
            <Title text='' width="500px"></Title>
           </contentLeft>
           <contentMiddle>
           <Title text="Workstation 1234"></Title>
           </contentMiddle>
                <contentRight>
                     <Button xmlns="sap.m" id="buttonLogOut" icon="sap-icon://log" text="{i18n>workstation.button.logOut}"
                press="onLogoutButtonPressed" busy="{viewModel>/busy/busyLockOut}" />
                </contentRight>
           </Bar>
      </customHeader>
        <content>
            <HBox class="sapUiMediumMarginBegin sapUiMediumMarginEnd sapUiTinyMarginTop" width="auto"
                alignContent="Center" alignItems="Center" justifyContent="SpaceBetween" renderType="Bare">
                <items>
                    <HBox alignContent="Center" alignItems="Center" id="inputContainer">
                        <Title text="{/inputDescr}" wrapping="true" titleStyle="H3" />
                        <Input id="input" editable="{/inputActive}" submit="onInit" fieldWidth="300px" value="" width="300px" class="sapUiTinyMarginBegin"
                            placeholder="{/inputPlaceholder}" change="onScannedField" />
                        <Title text="{textAdditionalInfo}" class="sapUiTinyMarginBegin" titleStyle="H3" />
                    </HBox>

                    <HBox alignItems="End" renderType="Bare" justifyContent="End" visible="false">
                        <items>
                            <Button text="Button 1" />
                            <Button xmlns="sap.m" text="Button 2" />
                        </items>
                    </HBox>
                </items>
            </HBox>


            <grid:CSSGrid gridAutoFlow="Row" gridTemplateColumns="50% 50%" gridGap="0.5rem"
                class="sapUiSmallMarginBegin sapUiTinyMarginEnd">
                <grid:items>
                    <FlexBox fitContainer="true" width="100%" renderType="Bare">
                        <layoutData>
                            <grid:GridItemLayoutData gridRow="1" gridColumn="1" />
                        </layoutData>
                        <items>
                            <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form"
                                editable="false" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanM="5"
                                labelSpanS="12" adjustLabelSpan="true" breakpointM="100" columnsL="1" columnsXL="1"
                                maxContainerCols="1" width="100%" singleContainerFullSize="false">
                                <sap.ui.layout.form:content>
                                    <Label text="{i18n>label.hu.orderTote}" />
                                    <Text text="{/orderValue}" />
                                    <Label text="{i18n>label.product}" />
                                    <Text text="{/matnrValue} {/matnrValueExt}" />
                                    <Label text="{i18n>label.sled}" />
                                    <Text text="{/mhdValue}" />
                                    <!--    <Label text="{i18n>label.hu.shippingCarton}" />
                                    <Text text="{/input/shippingCarton}" /> -->
                                </sap.ui.layout.form:content>
                            </sap.ui.layout.form:SimpleForm>
                        </items>
                    </FlexBox>
                    <FlexBox fitContainer="true" width="100%" renderType="Bare">
                        <layoutData>
                            <grid:GridItemLayoutData gridRow="1" gridColumn="2" />
                        </layoutData>
                        <items>
                            <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form"
                                editable="false" layout="ResponsiveGridLayout" labelSpanXL="2" labelSpanM="2"
                                labelSpanS="12" adjustLabelSpan="true" breakpointM="100" columnsL="1" columnsXL="1"
                                maxContainerCols="1" width="100%" singleContainerFullSize="false">
                                <sap.ui.layout.form:content>

                                </sap.ui.layout.form:content>
                            </sap.ui.layout.form:SimpleForm>
                        </items>

                    </FlexBox>
                    <FlexBox visible="false">
                        <layoutData>
                            <grid:GridItemLayoutData gridRow="2" gridColumn="1" />
                        </layoutData>
                    </FlexBox>
                </grid:items>
            </grid:CSSGrid>
            <core:HTML content="&lt;hr&gt;" />
                     <HBox items="{path: '/slots', factory: '.cardFactory'}" class="sapUiMediumMarginBegin sapUiMediumMarginEnd"
                justifyContent="SpaceAround" visible="true" renderType="Bare" alignItems="Center" alignContent="Center">
                <dependents>
                    <core:Fragment fragmentName="wmppec.view.Card" type="XML" />
                </dependents>
            </HBox>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button text="Order Tote abschlieÃŸen" press="onFinishOrderToteButtonPressed"
                    type="Emphasized">
                </Button>
            </OverflowToolbar>
        </footer>
    </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>



