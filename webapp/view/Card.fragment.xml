<f:Card width="auto"  class="min" xmlns="sap.m" xmlns:f="sap.f" xmlns:core="sap.ui.core" id="card">
    <f:header>
    </f:header>
    <f:content >
        <VBox class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTopBottom">
            <items>
                <VBox class="bottomline" alignItems="Center" justifyContent="Center">
                    <Title text="{ActionText}" />
                    <HBox justifyContent="Center" alignContent="SpaceAround" class="sapUiSmallMarginTopBottom">
                        <VBox alignItems="Center" justifyContent="Center">
                            <Image src="{shippingCartonImage}" height="50px" width="50px" class="sapUiTinyMarginBeginEnd" />
                            <Title text="{description}" class="sapUiTinyMarginTop"
                                visible="{ path: 'description', formatter: '.formatter.textVisible' }" />
                        </VBox>
                    </HBox>
                </VBox>
                <HBox class="sapUiSmallMarginTop" alignItems="Center" justifyContent="SpaceBetween">
                    <Title text="{i18n>label.slot}" />
                    <Text text=" {slotNumber}" />
                </HBox>
                <HBox alignItems="Center" justifyContent="SpaceBetween" class="sapUiSmallMarginTop">
                    <Title text="{i18n>label.storageBin}" />
                    <Text text=" {storageBin}" />
                </HBox>
                <HBox alignItems="Center" justifyContent="SpaceBetween" class="sapUiSmallMarginTop">
                    <Title text="{i18n>label.shippingCarton}" />
                    <Text text=" {handlingUnit}" />
                </HBox>
                <HBox alignItems="Center" justifyContent="SpaceBetween" class="sapUiSmallMarginTop">
                    <Title text="" />
                    <Text text="{shippingCartonLabel}" />
                </HBox>
                <HBox alignItems="Center" justifyContent="SpaceBetween" class="sapUiSmallMarginTop">
                    <Title text="{i18n>label.exception}" />
                    <Select forceSelection="false" selectedKey="{exceptionCode}">
                        <core:Item key="{ProductId}" text="OK" />
                    </Select>
                </HBox>
            </items>
        </VBox>
    </f:content>
</f:Card>